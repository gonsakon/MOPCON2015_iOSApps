# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Tabs in JS unless otherwise specified
[**.{js,json}]
indent_style = space
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2

[**.{sass,scss}]
indent_style = tab
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
